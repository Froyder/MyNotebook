<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" >

        <TextView
            android:id="@+id/list_header"
            android:layout_marginEnd="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note_list"
            android:textAlignment="center"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/text_header"
            android:layout_marginStart="60dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/note_text"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragments_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:baselineAligned="false">

        <fragment
            android:id="@+id/note_list"
            android:name="com.example.mynotebook.NoteList"
            android:layout_width="300dp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="150dp"
            tools:layout="@layout/fragment_note_list" />

        <fragment
            android:id="@+id/text_container"
            android:name="com.example.mynotebook.NoteText"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="300dp"
            android:layout_height="150dp"
            tools:layout="@layout/fragment_note_text"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/add_note"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragments_layout"/>

</androidx.constraintlayout.widget.ConstraintLayout>